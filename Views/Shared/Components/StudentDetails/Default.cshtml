@model Student;
<div class="container mt-5">
    <h2 class="mb-4 text-center">Student List</h2>
    <table class="table table-bordered table-hover table-striped">
        <thead class="bg-dark text-white">
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Age</th>
                <th>Email</th>
                <th>Phone</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.ID</td>
                <td>@Model.Name</td>
                <td>@Model.Age</td>
                <td>@Model.Email</td>
                <td>@Model.Phone</td>
            </tr>
        </tbody>
    </table>
</div>